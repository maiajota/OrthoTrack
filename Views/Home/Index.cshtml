@{
    ViewData["Title"] = "Home Page";
}

<main class="uk-container">
    <form class="uk-grid-small" uk-grid>
        <div class="uk-margin uk-width-1-1">
            <label class="uk-form-label">Nome</label>
            <input class="uk-input" type="text" required>
        </div>
        <div class="uk-margin uk-width-1-3@s">
            <label class="uk-form-label">CPF</label>
            <input class="uk-input" type="number" required>
        </div>
        <div class="uk-margin uk-width-1-3@s">
            <label class="uk-form-label">RG</label>
            <input class="uk-input" type="number" required>
        </div>
        <div class="uk-margin uk-width-1-3@s">
            <label class="uk-form-label">Data de Nascimento</label>
            <input class="uk-input" type="date" required>
        </div>
        <div class="uk-margin uk-width-1-1">
            <label class="uk-form-label">Endereço</label>
            <input class="uk-input" type="text" required>
        </div>
        <div class="uk-margin uk-width-1-3@s">
            <label class="uk-form-label">Telefone</label>
            <input class="uk-input" type="number" required>
        </div>
        <div class="uk-margin uk-width-1-3@s">
            <label class="uk-form-label">Início do Tratamento</label>
            <input class="uk-input" type="date" required>
        </div>
        <div class="uk-margin uk-width-1-3@s">
            <label class="uk-form-label" for="form-stacked-select">Convênio</label>
        <select class="uk-select" id="form-stacked-select">
            <option>Sem convênio</option>
            <option>Com convênio</option>
        </select>
        </div>
        <div class="uk-margin uk-width-1-1">
            <label class="uk-form-label">Observação</label>
            <textarea class="uk-textarea" rows="4"></textarea>
        </div>
            <div class="uk-width-1-1">
                <button class="uk-button uk-button-primary uk-width-1-1" type="submit">Cadastrar</button>
            </div>
    </form>
</main>